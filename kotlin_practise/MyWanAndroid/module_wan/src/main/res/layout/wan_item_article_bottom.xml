<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@null"
        android:src="@drawable/wan_ic_favorite_0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_extra"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivFavorite"
        app:layout_constraintRight_toLeftOf="@id/tvTime"
        tools:text="author" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/text_extra"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvAuthor"
        app:layout_constraintLeft_toRightOf="@id/tvAuthor"
        app:layout_goneMarginLeft="0dp"
        tools:text="2018-11-24" />

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="@string/wan_link_github"
        android:textColor="@color/text_link"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/ivFavorite"
        app:layout_constraintRight_toLeftOf="@id/ivFavorite" />

</androidx.constraintlayout.widget.ConstraintLayout>
